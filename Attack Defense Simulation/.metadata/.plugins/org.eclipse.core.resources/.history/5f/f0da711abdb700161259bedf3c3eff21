import java.util.Arrays;

public class Agent {

	private int score = 0;
	public String result = ""; 
	private int[] choiceArray = new int[] {0,0,0};
	protected boolean won = false;
	protected boolean done = false;

	public Agent(){
		score = 0;
	};

	void addPoints(int pointsAdded){
		score = score + pointsAdded;
	}

	int getScore(){
		return score; 
	}

	String getChoiceString(int party, int selection){
		String choice = "";

		if(party == 0){			
			switch (selection){
			case 0: choice = "push"; 
			case 1: choice = "shoot"; 
			case 2: choice = "flash"; 
			}

		}
		else{
			switch (selection){
			case 0: choice = "wait"; 
			case 1: choice = "shoot"; 
			case 2: choice = "smoke"; 
			}
		}
		return choice;

	}

	int getChoice(int x){
		return choiceArray[x];
	}
	
	int[] getChoices(){
		return choiceArray;
	}

	
	/** Rotate choice is meant to go through all options:
	 * 000 -> 001 -> 002
	 * 010 -> 011 -> 012
	 * 020 -> 021 -> 022
	 * 
	 * 100 -> 101 -> 102
	 * 110 -> 111 -> 112
	 * 120 -> 121 -> 122 
	 *  
	 * 200 -> 201 -> 202 
	 * 210 -> 211 -> 212    
	 * 220 -> 221 -> 222 
	 */
	
	int[] nextStrat(){
		if(choiceArray[2] == 2){
			choiceArray[2] = 0;
			if(choiceArray[1] == 2){
				choiceArray[1] = 0;
				if(choiceArray[0] == 2){
					done = true; 
				}else choiceArray[0]++;
			}else choiceArray[1]++; 
		}else choiceArray[2]++;
		
		return choiceArray;
	}

	boolean done(){
		if(choiceArray[0] == 2 && choiceArray[1] == 2&&choiceArray[2] == 2){
			System.out.println(Arrays.toString(choiceArray));
			return true;
		}
		else{
			System.out.println("Done: "+Arrays.toString(choiceArray));
			return false;
		}
	}

	void won(){
		won = true;
	}

	void reset(){
		score = 0;
		won = false;
	}

	

}
